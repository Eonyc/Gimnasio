@page
@using Gym.App.Dominio 
@model Gym.App.Presentacion.Pages.ValuationModel
@{
}
<br>
<h1 class="text-info" style="text-align: center;">Valuation Record</h1>
<div class="border">
    <form method="post">    
        <br>
        <!-- [padding: 10px] genera un margen a la izquierda de 10px -->
        <div class="container" style="padding: 10px;">
            <div class="form-group">
                <input type="hidden" asp-for="customer.Id">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="value.Weight"></label>
                    </div>
                    <div class="col-sm-3">
                       <input asp-for="value.Weight" class="form-control">
                    </div>
                    <span asp-validation-for="value.Weight" class="text-danger"></span> 
                </div>   
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label asp-for="value.Size"></label>
                    </div>
                    <div class="col-sm-3">
                       <input asp-for="value.Size" class="form-control">
                    </div>
                    <span asp-validation-for="value.Size" class="text-danger"></span>
                </div>   
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label asp-for="value.Gender"></label>
                    </div>
                    <div class="col-sm-3">
                       <!-- getbootstrap.com/docs/5.2/getting-started/introdution/ -->
                       <!-- [asp-items] despliega la lst de la Clase enumerada Gender -->
                       <select class="form-select form-control" asp-for="value.Gender" asp-items="@Html.GetEnumSelectList<Gender>()"></select>
                    </div>
                    <span asp-validation-for="value.Gender" class="text-danger"></span>
                </div>   
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label asp-for="value.Recommendation"></label>
                    </div>
                    <div class="col-sm-3">
                       <input asp-for="value.Recommendation" class="form-control">
                    </div>
                    <span asp-validation-for="value.Recommendation" class="text-danger"></span>
                </div>   
            </div>
            <br><hr class="hr">
            <br>
            <div class="form-group">
                <div class="row">
                    <!-- La clase [offset-sm-4] corre el boton submit 4 columnas a la derecha -->
                    <div class="col-sm-2 offset-sm-4">
                        <!-- La clase [btn btn-primary] boton de bootstrap -->
                        <input type="submit" value="Create" class="btn btn-primary form-control">
                     </div>
                     <div class="col-sm-2">
                          <a asp-page="/Customers/EditByClient" class="btn btn-success form-control">Return</a>                      
                     </div>
                </div>
            </div>
        </div>
    </form>
</div>
