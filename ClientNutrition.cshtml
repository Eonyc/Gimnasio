@page
@using Gym.App.Dominio 
@model Gym.App.Presentacion.Pages.ClientNutritionModel
@{
}
<br>
<h1 class="text-info" style="text-align: center;">Nutrition Register</h1>

<div class="border">
    <form method="post">    
        <br>
        <!-- [padding: 10px] genera un margen a la izquierda de 10px -->
        <div class="container" style="padding: 10px;">
            <div class="form-group">
                <!-- customer.Id viene de la pagina EditByNutrition -->
                <input type="hidden" asp-for="customer.Id">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="nutrition.Eat"></label>
                    </div>
                    <div class="col-sm-3">
                       <!-- getbootstrap.com/docs/5.2/getting-started/introdution/ -->
                       <!-- [asp-items] despliega la lst de la Clase enumerada TypeOfEat -->
                       <select class="form-select form-control" asp-for="nutrition.Eat" asp-items="@Html.GetEnumSelectList<TypeOfEat>()"></select>
                    </div>
                    <span asp-validation-for="nutrition.Eat" class="text-danger"></span> 
                </div>   
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                       <label asp-for="nutrition.NumberOfDays"></label>
                    </div>
                    <div class="col-sm-3">
                       <input asp-for="nutrition.NumberOfDays" class="form-control">
                    </div>
                    <span asp-validation-for="nutrition.NumberOfDays" class="text-danger"></span>
                </div>   
            </div>
 
            <br><hr class="hr">
            <br>
            <div class="form-group">
                <div class="row">
                    <!-- La clase [offset-sm-4] corre el boton submit 4 columnas a la derecha -->
                    <div class="col-sm-2 offset-sm-4">
                        <!-- La clase [btn btn-primary] boton de bootstrap -->
                        <input type="submit" value="Create" class="btn btn-primary form-control">
                     </div>
                     <div class="col-sm-2">
                          <a asp-page="/Diets/RecordDiet" class="btn btn-success form-control">Record Diet</a>                      
                     </div>
                </div>
            </div>
        </div>
    </form>
</div>
