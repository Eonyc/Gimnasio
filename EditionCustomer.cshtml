@page
@model Gym.App.Presentacion.Pages.EditionCustomerModel
@{
}

<head>
    <!-- se vincula al hoja de estilo para definir el aspecto del formulario de Registro-->  
    <link rel="stylesheet" type="text/css" href="css/register.css">
</head>
<br>
<h1 class="text-info" style="text-align: center;">Edition Customer</h1>
<!-- La etiqueta [div] crea un [Contenedor] -->
<div class="border">
    <!-- Metodo [post] envia la informacion del formulario -->
    <form method="post">
        <!-- Capturo el Id y el Dni del Cliente y lo oculto para que NO se 
        muestre en el formulario con el atributo [hidden]-->
        <input type="hidden" asp-for="Customer.Id">
        <input type="hidden" asp-for="Customer.Dni">
        <br>
        <!-- [padding: 10px] genera un margen a la izquierda de 10px -->
        <div class="container" style="padding: 10px;">
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Customer.Name"></label>
                     </div>
                     <div class="col-sm-3">
                        <input asp-for="Customer.Name" class="form-control">
                     </div>
                     <span asp-validation-for="Customer.Name" class="text-danger"></span>
                     <div class="col-sm-1">
                        <label asp-for="Customer.Surname"></label>
                     </div>
                     <div class="col-sm-3">
                        <input asp-for="Customer.Surname" class="form-control">
                     </div>
                     <span asp-validation-for="Customer.Surname" class="text-danger"></span>
                </div>   
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Customer.Age"></label>
                     </div>
                     <div class="col-sm-3">
                        <input asp-for="Customer.Age" class="form-control">
                     </div>
                     <span asp-validation-for="Customer.Age" class="text-danger"></span>
                     <div class="col-sm-1">
                        <label asp-for="Customer.Telephone"></label>
                     </div>
                     <div class="col-sm-3">
                        <input asp-for="Customer.Telephone" class="form-control">
                     </div>
                     <span asp-validation-for="Customer.Telephone" class="text-danger"></span>
                </div>   
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        <label asp-for="Customer.Address"></label>
                     </div>
                     <div class="col-sm-3">
                        <input asp-for="Customer.Address" class="form-control">
                     </div>
                     <span asp-validation-for="Customer.Address" class="text-danger"></span>
                </div>   
            </div>
            <br><hr class="hr">
            <br>
            <div class="form-group">
                <div class="row">
                    <!-- La clase [offset-sm-4] corre el boton submit 4 columnas a la derecha -->
                    <div class="col-sm-2 offset-sm-4">
                        <!-- La clase [btn btn-primary] boton de bootstrap -->
                        <input type="submit" value="Update" class="btn btn-primary form-control">
                     </div>
                     <div class="col-sm-2">
                          <a asp-page="/Customers/QueryCustomers" class="btn btn-success form-control">Return</a>                      
                     </div>
                </div>
            </div>
            <br><hr class="hr">
            <br>
            <div class="form-group">
                <div class="row">
                     <div class="opcioncontra"><a href="">You don't have credentials? Create</a></div>
                </div>   
            </div>
        </div>
    </form>
</div>